doctype html
html(lang='zh_cn')
    head
        title #{title}
        include ./../../command/meta
        link(rel="stylesheet" href="../weui/dist/style/weui.min.css")
        style.
            html {
                background: #EEE;
            }
            body{
                font-size:14px !important;
                font-family: "Helvetica Neue", Helvetica, Tahoma, Arial, 'Microsoft Yahei', 'Hiragino Sans GB', 'WenQuanYi Micro Hei', sans-serif !important;
            }
            img{
                width:30px;margin-right:5px;display:block;
            }
            .feedback{
                color: #b32020;
                text-align: center;
                width: 100%;
                display: block;
                margin-top: 30px;
                cursor: pointer;
            }
    body
        div.weui_cells_title  问题和意见

        textarea.weui_textarea(placeholder="请输入您的问题和意见" name="" rows=6)

        div.weui_cells_title  联系电话

        input.weui_input(placeholder="选填，便于我们与你联系" type="Number" name="" )

        a.weui_btn.weui_btn_warn( href="javascript:;") 确认
